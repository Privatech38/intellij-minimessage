<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <name>MiniMessage</name>
    <id>dev.privatech.plugin.minimessage</id>

    <vendor email="contact@privatech.dev">Privatech</vendor>
    <category>Languages</category>

    <description><![CDATA[
    <html>
    <body>
        <p>Provides support for Kyori's <a href="https://docs.advntr.dev/minimessage/index.html">MiniMessage format</a>
        in JetBrains IDEs.</p><br>
        <h2>Features</h2>
        <ul>
            <li>Syntax highlighting</li>
            <li>Error checking</li>
        </ul>
    </body>
    </html>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <depends optional="true" config-file="MiniMessage-injections.xml">org.intellij.intelliLang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="MiniMessage"
                  implementationClass="dev.privatech.plugin.minimessage.MiniMessageFileType"
                  fieldName="INSTANCE"
                  language="MiniMessage"
                  extensions="minimessage"/>
        <lang.parserDefinition language="MiniMessage"
                                implementationClass="dev.privatech.plugin.minimessage.MiniMessageParserDefinition"/>
        <lang.syntaxHighlighterFactory language="MiniMessage"
                                       implementationClass="dev.privatech.plugin.minimessage.MiniMessageSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="dev.privatech.plugin.minimessage.MiniMessageColorSettingsPage"/>
        <annotator language="MiniMessage"
                     implementationClass="dev.privatech.plugin.minimessage.annotator.MiniMessageSyntaxColorAnnotator"/>
        <annotator language="MiniMessage"
                        implementationClass="dev.privatech.plugin.minimessage.annotator.MiniMessageSemanticsAnnotator"/>
    </extensions>
</idea-plugin>